<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.Detail.Expanded" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">0sp</item>
        <item name="android:maxLines">4</item>
    </style>
    <style name="TextAppearance.Title.Expanded" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:maxLines">4</item>
    </style>
</resources>
